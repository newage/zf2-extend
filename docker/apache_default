<VirtualHost *:80>
    ServerName zf2-extend
    DocumentRoot /var/www/public
    DirectoryIndex index.php
    <Directory /var/www/public>
        Options Indexes FollowSymLinks MultiViews
        AllowOverride All
        Order allow,deny
        allow from all
    </Directory>

    Alias /components /var/www/node_modules
    <Directory /var/www/node_modules>
        AllowOverride All
        Order allow,deny
        allow from all
    </Directory>

    SetEnv APPLICATION_ENV development
</VirtualHost>